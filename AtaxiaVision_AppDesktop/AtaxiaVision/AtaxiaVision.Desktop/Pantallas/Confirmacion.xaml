<Window x:Class="AtaxiaVision.Pantallas.Confirmacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtaxiaVision.Desktop.Pantallas"
        mc:Ignorable="d"
        Title="Ataxia Vision" Height="768" Width="1024"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="30"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized">
    <Grid>
        <!--Encabezado-->
        <materialDesign:ColorZone Background="#FFF44336" Padding="32">
            <DockPanel>
                <StackPanel>
                    <TextBlock
                        Style="{DynamicResource MaterialDesignTitleTextBlock}"
                        Foreground="#FFF" 
                        TextAlignment="Center" 
                        FontSize="40">
                        Fin de ejercicio
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        <!--Cuerpo-->
        <Label 
            x:Name="PreguntaLabel"
            Content="Pregunta" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="0,250,0,0" 
            FontSize="40"
            />
        <Button 
            x:Name="SiBtn" 
            Content="Sí" 
            HorizontalAlignment="Center" 
            Margin="188,470,528,0" 
            Width="300" 
            Height="150" 
            FontSize="40" 
            VerticalAlignment="Top" 
            Background="#FF4CAF50" BorderBrush="#FF4CAF50"
            />
        <Button 
            x:Name="NoBtn" 
            Content="No" 
            Margin="528,470,188,0" 
            Click="NoBtn_Click" 
            Height="150" 
            FontSize="40" 
            HorizontalAlignment="Center" 
            Width="300" 
            VerticalAlignment="Top"/>
        
    </Grid>
</Window>
